---
import BaseLayout from "../layouts/BaseLayout.astro";
import FaqLayout from "../components/infopages/Faq.astro";
import { Linkedin, Twitter } from "lucide-react";

---

<BaseLayout>

<section id="sakura-timeline">
  <div class="md:px-8 px-3 py-20 mx-auto md:px-12 lg:px-12 max-w-4xl">
    <div class="text-center max-w-2xl mx-auto lg:text-balance mb-12">
      <h2
        class="text-3xl leading-tight tracking-tight sm:text-3xl md:text-4xl capitalize lg:text-5xl mt-4 font-medium text-base-900 lg:text-balance"
      >
