---
import BaseLayout from "../layouts/BaseLayout.astro";
import FaqLayout from "../components/infopages/Faq.astro";
import { Linkedin, Twitter } from "lucide-react";

---

<BaseLayout>




<section id="founders">
  <div class="md:px-8 px-3 py-20 mx-auto md:px-12 lg:px-12 max-w-7xl">
    <div class="text-center max-w-2xl mx-auto mb-10">
      <h2 class="text-2xl leading-tight tracking-tight sm:text-2xl md:text-3xl capitalize lg:text-4xl mt-4 font-medium text-base-900">
        Meet the Sakura Team
      </h2>
      <p class="text-base leading-normal mt-4 text-base-500 font-medium">
        The minds behind Sakura — building intelligent systems that redefine customer experience at scale.
      </p>
    </div>

    <div class="flex md:flex-col-reverse ">
        <div class="md:w-1/2"></div>
        <div class="md:w-1/2"><div class=" p-10 flex flex-col ">
        <div class="flex flex-col items-start">
         
          <h3 class="text-2xl md:text-3xl text-slate-800 mb-1">Paul-Simon Emechebe</h3>
          <p class="text-main-400 font-medium mb-4">CEO & Co-founder</p>
          <p class="text-slate-600 leading-relaxed text-sm w-[70%]">
            Paul majors in Mechanical Engineering and formerly served as CTO at Franco-African Edutech startup <span class="font-semibold">Aisely</span>. 
            He specializes in AI engineering and writes code for <span class="font-semibold">Sakura</span>, leading the vision of intelligent customer engagement systems.
          </p>
        </div>

        <div class="flex gap-4 justify-start mt-6">
          <a href="https://www.linkedin.com/in/paulsimonemechebe" target="_blank" class="hover:text-main-400 transition">
            <Linkedin class="w-6 h-6" />
          </a>
          <a href="https://twitter.com/paulsimonemechebe" target="_blank" class="hover:text-main-400 transition">
            <Twitter class="w-6 h-6" />
          </a>
        </div>
      </div></div>
    </div>
    <div class="flex md:flex-col-reverse ">
        <div class="md:w-1/2"></div>
        <div class="md:w-1/2"><div class=" p-10 flex flex-col ">
        <div class="flex flex-col items-start">
          
          <h3 class="text-2xl md:text-3xl text-slate-800 mb-1">Chibueze Aniezeofor</h3>
          <p class="text-main-400 font-medium mb-4">Head of Engineering & Co-founder</p>
          <p class="text-slate-600 leading-relaxed text-sm">
            Chibueze holds a BSc in Mechanical Engineering and leads engineering at <span class="font-semibold">AwaDoc</span>, a healthcare AI platform for Africa. 
            He also contributes to <span class="font-semibold">Sakura</span>’s core development, building robust systems that power scalable AI solutions.
          </p>
        </div>

        <div class="flex gap-4 justify-start mt-6">
          <a href="https://www.linkedin.com/in/paulsimonemechebe" target="_blank" class="hover:text-main-400 transition">
            <Linkedin class="w-6 h-6" />
          </a>
          <a href="https://twitter.com/paulsimonemechebe" target="_blank" class="hover:text-main-400 transition">
            <Twitter class="w-6 h-6" />
          </a>
        </div>
      </div></div>
    </div>

   
  </div>
</section>


</BaseLayout>
