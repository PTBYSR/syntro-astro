---
import BaseLayout from "../layouts/BaseLayout.astro";
import FaqLayout from "../components/infopages/Faq.astro";
---

<BaseLayout>


<section id="demo" class="py-24 bg-base-50">
  <div class="max-w-7xl mx-auto grid grid-cols-1 lg:grid-cols-2 gap-10 px-6 md:px-12 lg:px-16 items-center">

    <!-- LEFT SIDE: Poster -->
    <div class="bg-base-300 bg-opacity-30 rounded-3xl p-12 flex flex-col justify-center text-left shadow-sm">
      <h2 class="text-4xl font-semibold text-base-900 leading-tight mb-4">
        Experience the future of <span class="text-main-400">customer support</span>
      </h2>
      <p class="text-base text-slate-600 mb-8 max-w-md">
        See how Sakura AI transforms your customer experience with intelligent automation that feels genuinely human.
      </p>
      <div class="relative">
        <img 
          src="/ai-agent-demo.png" 
          alt="AI Agent Illustration" 
          class="rounded-2xl shadow-md border border-base-200"
        />
        <div class="absolute -bottom-6 -right-6 bg-main-400 text-white text-sm px-4 py-2 rounded-full shadow-lg">
          Live Product Demo →
        </div>
      </div>
    </div>

    <!-- RIGHT SIDE: Form -->
    <div class="bg-white rounded-3xl shadow-xl p-10">
      <h3 class="text-2xl font-semibold text-base-900 mb-2">Request a Demo</h3>
      <p class="text-slate-500 text-sm mb-6">
        Fill out the form below and we’ll reach out within 24 hours to schedule your personalized walkthrough.
      </p>

      <form class="space-y-5">
        <div>
          <label class="block text-sm font-medium text-slate-700 mb-1">Full Name</label>
          <input 
            type="text" 
            placeholder="Jane Doe" 
            class="w-full border border-slate-300 focus:border-main-400 focus:ring-main-400 rounded-xl px-4 py-3 text-sm outline-none"
          />
        </div>

        <div>
          <label class="block text-sm font-medium text-slate-700 mb-1">Work Email</label>
          <input 
            type="email" 
            placeholder="you@company.com" 
            class="w-full border border-slate-300 focus:border-main-400 focus:ring-main-400 rounded-xl px-4 py-3 text-sm outline-none"
          />
        </div>

        <div>
          <label class="block text-sm font-medium text-slate-700 mb-1">Company Name</label>
          <input 
            type="text" 
            placeholder="Company Inc." 
            class="w-full border border-slate-300 focus:border-main-400 focus:ring-main-400 rounded-xl px-4 py-3 text-sm outline-none"
          />
        </div>

        <div>
          <label class="block text-sm font-medium text-slate-700 mb-1">Company Size</label>
          <select 
            class="w-full border border-slate-300 focus:border-main-400 focus:ring-main-400 rounded-xl px-4 py-3 text-sm outline-none bg-white"
          >
            <option>1–10 employees</option>
            <option>11–50 employees</option>
            <option>51–200 employees</option>
            <option>200+ employees</option>
          </select>
        </div>

        <div>
          <label class="block text-sm font-medium text-slate-700 mb-1">Message (Optional)</label>
          <textarea 
            rows="3"
            placeholder="Tell us what you’d like to explore…" 
            class="w-full border border-slate-300 focus:border-main-400 focus:ring-main-400 rounded-xl px-4 py-3 text-sm outline-none resize-none"
          ></textarea>
        </div>

        <button 
          type="submit" 
          class="w-full bg-main-400 hover:bg-main-500 text-white font-medium rounded-3xl py-3 transition-all duration-200"
        >
          Schedule My Demo
        </button>

        <p class="text-xs text-slate-400 text-center mt-2">
          By submitting, you agree to our privacy policy.
        </p>
      </form>
    </div>

  </div>
</section>

</BaseLayout>
